{
  "name": "@nodepkg/codemirror",
  "version": "0.0.0",
  "monobundle": {
    "build": {
      "clean": true
    },
    "exports": {
      ".": "./src/index.ts"
    }
  },
  "dependencies": {
    "@codemirror/autocomplete": "~6.4.2",
    "@codemirror/commands": "~6.2.1",
    "@codemirror/lang-json": "~6.0.1",
    "@codemirror/language": "~6.6.0",
    "@codemirror/lint": "~6.2.0",
    "@codemirror/state": "~6.2.0",
    "@codemirror/view": "~6.9.1",
    "@innoai-tech/lodash": "^0.2.0",
    "@innoai-tech/reactutil": "^0.5.1",
    "@lezer/common": "^1.0.2",
    "@lezer/highlight": "~1.1.3",
    "@nodepkg/state": "workspace:*",
    "ajv": "~8.12.0"
  },
  "peerDependencies": {
    "@mui/material": "*",
    "react": "*",
    "rxjs": "*"
  },
  "devDependencies": {
    "@mui/material": "*",
    "@types/react": "^18.0.28",
    "react": "^18.2.0",
    "rxjs": "^7.8.0"
  },
  "exports": {
    ".": {
      "import": {
        "types": "./index.d.ts",
        "default": "./index.mjs"
      }
    }
  },
  "files": [
    "*.mjs",
    "*.d.ts"
  ],
  "license": "MIT",
  "scripts": {
    "lint": "prettier --write .",
    "build": "monobundle",
    "test": "vitest --run --passWithNoTests",
    "prepublishOnly": "pnpm run build"
  },
  "type": "module"
}